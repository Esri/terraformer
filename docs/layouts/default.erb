<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= "Home" || current_page.data.title %> | Terraformer</title>

    <!-- Assets -->
    <%= stylesheet_link_tag "terraformer" %>
    <script>
      if (window.location.href.match('github.io')) {
        window.location.replace('http://terraformer.io' + window.location.pathname);
      }
    </script>
  </head>

  <body id="wrap">
    <%= partial "partials/nav" %>
    <%= partial "partials/doctoc" %>
    <%= partial "partials/cover" %>

    <main class="index main-content" id="main-content">
      <%= yield %>
    </main>
    <%= partial "partials/footer" %>
  </body>
    <%= javascript_include_tag  "modernizr.custom" %>
    <%= javascript_include_tag  "classie" %>
    <%= javascript_include_tag  "drawer" %>
</html>